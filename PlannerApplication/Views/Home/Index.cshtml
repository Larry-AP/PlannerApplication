@model DateTime

<!DOCTYPE html>
<html>
<head>
    <title>Planner App</title>
</head>
<body>
    <h1>Welcome to the Planner App!</h1>
    <p>Current date and time: @Model.ToString("yyyy-MM-dd HH:mm:ss")</p>

    <!-- Display reminders (if any) -->
    @if (Model.Day == DateTime.Today.Day)
    {
        <h2>Today's Reminders:</h2>
        <ul>
            <li>Reminder 1</li>
            <li>Reminder 2</li>
            <!-- Add more reminders dynamically -->
        </ul>
    }
    else
    {
        <p>No reminders for today.</p>
    }
    <div>
    <!-- Link to view reminders -->
    <a href="~/Reminders/Index">View Reminders</a>
    <!-- Link to create a new reminder -->
    <a href="~/Reminders/Create">Create New Reminder</a>

    <!-- Link to view checklists -->
    <a href="~/Checklists/Index">View Checklists</a>
    <!-- Link to create a new checklist -->
    <a href="~/Checklists/Create">Create New Checklist</a>
    </div>
</body>
</html>

