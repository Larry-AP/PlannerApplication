@model List<PlannerApplication.Models.Checklist>

<h1>Checklists</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Number of Items</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var checklist in Model)
            {
                <tr>
                    <td>@checklist.Title</td>
                    <td>@(checklist.Items?.Count ?? 0)</td>
                    <td>
                        <a href="@Url.Action("Details", "Checklists", new { id = checklist.Id })">Details</a> |
                        <a href="@Url.Action("Edit", "Checklists", new { id = checklist.Id })">Edit</a> |
                        <a href="@Url.Action("Delete", "Checklists", new { id = checklist.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No checklists found.</p>
}

<a href="@Url.Action("Create", "Checklists")" class="btn btn-primary">Add New Checklist</a>
