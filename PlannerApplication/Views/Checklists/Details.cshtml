@model PlannerApplication.Models.Checklist

<h1>Checklist Details</h1>

<div>
    <h4>Title:</h4>
    <p>@Model.Title</p>
</div>

<div>
    <h4>Items:</h4>
    <ul>
        @foreach (var item in Model.Items)
        {
            <li>@item.Description (Completed: @item.IsCompleted)</li>
        }
    </ul>
</div>

<a asp-action="Index" class="btn btn-primary">Back to List</a>
